rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read/write their own data
      allow read, write: if request.auth.uid == userId;

      // Notes subcollection
      match /notes/{noteId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}
